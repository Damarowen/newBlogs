<%- include('../partials/header.ejs') %>

<h1>Edit Post</h1>
<div class="row center">

  <form action="/blogs/<%= query._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="input-field col s12">
      <input value="<%= query.title %> " name="title" type="text" id="title" class="validate">
      <label for="title">Title</label>
    </div>
    <div class="input-field col s12">
      <div class="wrapper">
        <div class="content">
          <i class="material-icons">backup</i>
          <p>Upload File</p>
        </div>
        <img class="responsive-img">
        <div class="cancel"><span class="material-icons">
          clear
        </span></div>
      </div>
   
      <div class="file-field input-field">
        <div class="btn">
          <span>File</span>
          <input type="file" name="image" id="inputBtn">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text"  value="<%= query.image %>">
        </div>
      </div>
    </div>
    <div class="input-field col s12">
      <input value="<%= query.description %> " name="description" type="text" id="description" class="validate">
      <label for="description">Description</label>
    </div>
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
      <i class="material-icons right">send</i>
    </button>
  </form>

</div>


<%- include('../partials/footer.ejs') %>