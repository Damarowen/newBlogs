<%- include('../partials/header.ejs') %>

        <h1>Blog Post</h1>
        <div class="row center">
            <% for(const x of query){ %>
            <h2 class="text-lg"> <%= x.title %> </h2>
            <img class="responsive-img" src="<%= x.image %>" alt="">
            <h2> <%= x.description %> </h2>
            <h2> <%= x.createdAt.toDateString() %> </h2>
            <a href="/blogs/<%=x._id %> " class="waves-effect waves-light btn">Show More</a>
            <a href="/blogs/<%=x._id %>/edit " class="waves-effect waves-light btn">Edit</a>
            <a href="/blogs/new " class="waves-effect waves-light btn">Create New</a>
            <form style="display: inline;" action="/blogs/<%= x._id %>?_method=DELETE " method="POST">
                <button class="waves-effect waves-light btn">Delete</button>
            </form>
            <% }   %>

        </div>
 
        <%- include('../partials/footer.ejs') %>
