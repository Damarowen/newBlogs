<%- include('../partials/header.ejs') %> 

    <h1>New Post</h1>
    <div class="row center">

      <form action="/blogs" method="POST" enctype="multipart/form-data">
        <div class="input-field col s12">
          <input name="title" type="text" id="title" class="validate">
          <label for="title">Title</label>
        </div>
        <div class="input-field col s12">
          <div class="wrapper">
            <div class="content">
              <i class="material-icons">backup</i>
              <p>Upload File</p>
            </div>
            <img id="imageUpload" class="responsive-img">
            <div class="cancel"><span class="material-icons">
              clear
            </span></div>
          </div>
       
          <div class="file-field input-field">
            <div class="btn orange">
              <span>File</span>
              <input type="file" name="image" id="inputBtn">
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text">
            </div>
          </div>
        </div>
        <div class="input-field col s12">
          <input name="headline" type="text" id="headline" class="validate">
          <label for="headline">Headline</label>
        </div>
        <div class="input-field col s12">
          <textarea id="description" class="materialize-textarea " name="description"></textarea>
          <label for="description">Description</label>
        </div>
        <a href="/blogs" class="btn orange"> Back </a>
        <button class="btn waves-effect waves-light orange" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button>
      </form>

    </div>


<%- include('../partials/footer.ejs') %> 